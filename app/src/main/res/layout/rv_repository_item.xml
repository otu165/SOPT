<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rvGitRepoItem"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtRvGitRepoUpdatedAt"
        android:text="Updated on 16 Aug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/txtRvGitRepoName"
        android:text="SoptStagram"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/txtRvGitRepoDescription"
        android:text="IT 창업 동아리 SOPT 안드로이드 교육 프로젝트"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtRvGitRepoName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:id="@+id/imgRvGitRepoColor"
        android:background="@color/red"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@+id/txtRvGitRepoDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/txtRvGitRepoLanguage"
        android:text="Kotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgRvGitRepoColor"
        app:layout_constraintBottom_toBottomOf="@+id/imgRvGitRepoColor"
        app:layout_constraintLeft_toRightOf="@id/imgRvGitRepoColor"
        android:layout_marginLeft="10dp" />



</androidx.constraintlayout.widget.ConstraintLayout>